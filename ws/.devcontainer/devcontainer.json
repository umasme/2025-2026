{
  "name": "UMASME ROS 2 Dev Container",
  "build": {
      "dockerfile": "../Dockerfile",
      "context": ".."
  },
  "runArgs": [
      "--network=host",
      "--ipc=host",
      "-e", "DISPLAY=${env:DISPLAY}",
      "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
  ],
  "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "ms-vscode.cpptools",
              "ms-iot.vscode-ros"
          ]
      }
  },
  "remoteUser": "devuser"
}